@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">StickWizards</h1>
</div>
<style>
    body {
        background-color: navajowhite;
        font-family: 'Arial', sans-serif; 
        margin: 0;
        padding: 0;
    }

    .header {
        background-color: #007bff;
        color: white;
        text-align: center;
        padding: 10px;
        font-size:10px;
    }

    .content {
        text-align: center;
        margin: 20px;
    }

    .product {
        font-size: 30px;
        font-family: 'Arial', sans-serif; 
        color: #007bff;
    }

    .description {
        font-size: 20px;
        font-family: 'Arial', sans-serif; 
    }

    .product-card {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 20px;
        margin: 20px;
        display: inline-block;
        transition: transform 0.2s;
        font-family: 'Arial', sans-serif; 
    }

        .product-card:hover {
            transform: scale(1.05);
        }

    .product-image {
        max-width: 100%;
        height: 200px;
        width:200px;
    }

    .product-title {
        font-size: 24px;
        color: #333;
        font-family: 'Tahoma', sans-serif; 
    }

    .product-rating {
        font-size: 20px;
        color: #007bff;
        font-family: 'Tahoma', sans-serif; 
    }

    .button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
        transition: background-color 0.3s;
    }

        .button:hover {
            background-color: #0056b3;
        }

    .box-shadow {
        box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.2);
    }
    .border {
        border: 2px solid #ccc;
        border-radius: 5px;
    }
    .text-shadow {
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }
    .gradient-background {
        background: linear-gradient(to bottom, #007bff, #0056b3);
        color: white;
    }
    .rounded-corners {
        border-radius: 10px;
    }
    .transition-effect {
        transition: background-color 0.3s, color 0.3s;
    }

        .transition-effect:hover {
            background-color: #0056b3;
            color: #fff;
        }

      .footer {
        background-color: #333;
        color: cornflowerblue;
        padding: 20px 0;
        text-align: center;
    }
    
</style>

<body>
    <div class="header">
        <h1>Welcome to Stick Wizards</h1>
    </div>
    <div class="content">
        <div class="product">
            Stick
        </div>
        <div class="description">
            Explore our magical world of sticks! We offer a wide variety of sticks for every purpose, from wands to walking sticks. Our sticks are crafted with care and precision to meet your needs.
        </div>

        <!-- Product Cards -->
        <div class="product-card">
            <img class="product-image" src="\img\Stick 1.jpg" alt="Stick 1">
            <div class="product-title">Stick 1</div>
            <div class="product-rating">Rating: 4.5/5</div>
        </div>

        <div class="product-card">
            <img class="product-image" src="\img\Stick 2.jpeg" alt="Stick 2">
            <div class="product-title">Stick 2</div>
            <div class="product-rating">Rating: 4.2/5</div>
        </div>

        <div class="product-card">
            <img class="product-image" src="\img\Stick 3.png" alt="Stick 3">
            <div class="product-title">Stick 3</div>
            <div class="product-rating">Rating: 4.7/5</div>
        </div>
    </div>
</body>